! scrolling
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! fonts
URxvt.antialias: true
URxvt.hinting: true
URxvt.rgba: rgb
URxvt.hintstyle: hintslight
URxvt.dpi: 120
URxvt.font: xft:Operator Mono SSM:style=Light:pixelsize=16
URxvt.boldFont: xft:Operator Mono SSM:style=Bold:pixelsize=16

! colors
*.foreground: #F8F8F2
*.background: #282A36
*.color0:     #000000
*.color8:     #4D4D4D
*.color1:     #FF5555
*.color9:     #FF6E67
*.color2:     #50FA7B
*.color10:    #5AF78E
*.color3:     #F1FA8C
*.color11:    #F4F99D
*.color4:     #BD93F9
*.color12:    #CAA9FA
*.color5:     #FF79C6
*.color13:    #FF92D0
*.color6:     #8BE9FD
*.color14:    #9AEDFE
*.color7:     #BFBFBF
*.color15:    #E6E6E6

! ui configuration
URxvt.internalBorder: 4
URxvt.scrollBar: false
